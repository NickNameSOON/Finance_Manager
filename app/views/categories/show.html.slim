.container.py-4
  ol.breadcrumb
    = render_breadcrumbs :tag => :li, :separator => "&nbsp;/&nbsp;"

  = render @category

  .col.d-flex
    = button_to "Видалити категорію", @category, method: :delete, class: "custom-btn danger me-4"
    = link_to "Додати нову транзакцію", new_operation_path, class: "custom-btn success" if @category.operations.count <= 0


